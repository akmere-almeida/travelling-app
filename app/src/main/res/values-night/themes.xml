<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travellingapp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Surface brand color. -->
        <item name="colorPrimarySurface">@color/almost_white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorSurface">@color/almost_white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/almost_white</item>
        <item name="colorPrimaryVariant">@color/almost_white_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cool_blue</item>
        <item name="colorSecondaryVariant">@color/cool_blue_dark</item>
        <item name="colorOnSecondary">@color/cool_blue_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>